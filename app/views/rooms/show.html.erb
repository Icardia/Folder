<h1>
  <%= @room.name %>
</h1>

<div class="row">
  <div class="col-12 col-md-3">
    <%= render partial: 'rooms' %>
  </div>

  <div class="col">
    <div class="chat" id="rm" data-channel-subscribe="room" data-room-id="<%= @room.id %>">
      <% @room_messages.each do |message| %>
        <div class="chat-message-container">
          <div class="row no-gutters">

            <div class="col">
              <div class="message-content">
                <p class="mb-1">
                  <%= message.message %>
                </p>

                <div class="text-right">
                  <small>
                    <%= message.created_at %>
                  </small>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <%= simple_form_for @room_message, defaults: { input_html: { class: 'msg_form' } }, remote: true do |form| %>
        <div class="input-group mb-3">
            <%= form.input :message, as: :string,
                                 wrapper: false,
                                 label: false,
                                 input_html: {
                                   class: 'chat-input'
                                 } %>
            <div class="input-group-append">
                <%= form.submit "Send", class: 'btn btn-primary chat-input' %>
            </div>
        </div>

        <%= form.input :room_id, as: :hidden %>

    <% end %>
        <div id="new_message">
        </div>
  </div>
</div>


<div id="msg_temp" class="d-none" data-role="message-template">
  <div class="chat-message-container">
    <div class="row no-gutters">
      <div class="col">
        <div class="message-content">
          <p class="mb-1" data-role="message-text"></p>

          <div class="text-right">
            <small data-role="message-date"></small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
